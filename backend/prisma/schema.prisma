generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  first_name      String
  last_name       String
  email           String   @unique
  phone           String
  city            String
  country         String
  additional_info String?
  password_hash   String
  profile_photo   String?
  created_at      DateTime @default(now())
}


